# Django 설정
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=*.cloudtype.app,yourdomain.com

# 데이터베이스 설정 (클라우드타입 MySQL)
DB_URL=jdbc:mysql://host:port/dbname?serverTimezone=Asia/Seoul
DB_USERNAME=your-db-username
DB_PASSWORD=your-db-password

# OpenAI API (챗봇용)
OPENAI_API_KEY=your-openai-api-key

# CORS 설정
CORS_ALLOW_ALL_ORIGINS=True
CSRF_TRUSTED_ORIGINS=https://yourdomain.cloudtype.app
